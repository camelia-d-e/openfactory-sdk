<MTConnectDevices>
<Devices>
    <Device uuid="WTVB01" id="WTVB01" name="Vibration_Sensor">
      
      <Description manufacturer="witmotion" serialNumber="WT202405140267">
        Industrial Grade MEMS Vibration sensor WTVB01-485
      </Description> 

      <DataItems>
        <DataItem category="EVENT" id="avail" name="avail" type="AVAILABILITY"/>
      </DataItems>

      <Components>
        <Sensor id="temp_sensor" name="TemperatureSensor">
          <Description>Temperature measurement sensor</Description>
          <DataItems>
            <DataItem category="SAMPLE" id="temp" name="Temperature" type="TEMPERATURE" 
                      units="CELSIUS"/>
          </DataItems>
        </Sensor>
        
        <Sensor id="vib_sensor" name="VibrationSensor">
          <Description>Multi-axis vibration monitoring sensor</Description>
          <DataItems>
            <DataItem category="SAMPLE" id="dx" name="DisplacementX" type="DISPLACEMENT" 
                      units="MILLIMETER" nativeUnits="MICROMETER"/>
            
            <DataItem category="SAMPLE" id="dy" name="DisplacementY" type="DISPLACEMENT" 
                      units="MILLIMETER" nativeUnits="MICROMETER"/>
            
            <DataItem category="SAMPLE" id="dz" name="DisplacementZ" type="DISPLACEMENT" 
                      units="MILLIMETER" nativeUnits="MICROMETER"/>
            
            <DataItem category="SAMPLE" id="hx" name="FrequencyX" type="FREQUENCY" 
                      units="HERTZ" nativeUnits="HERTZ"/>
            
            <DataItem category="SAMPLE" id="hy" name="FrequencyY" type="FREQUENCY" 
                      units="HERTZ" nativeUnits="HERTZ"/>
            
            <DataItem category="SAMPLE" id="hz" name="FrequencyZ" type="FREQUENCY" 
                      units="HERTZ" nativeUnits="HERTZ"/>
            
            <DataItem category="SAMPLE" id="vx" name="VelocityX" type="VELOCITY" 
                      units="MILLIMETER/SECOND"/>
            
            <DataItem category="SAMPLE" id="vy" name="VelocityY" type="VELOCITY" 
                      units="MILLIMETER/SECOND"/>
            
            <DataItem category="SAMPLE" id="vz" name="VelocityZ" type="VELOCITY" 
                      units="MILLIMETER/SECOND"/>

            <DataItem category="SAMPLE" id="acc_x" name="AccelerationX" type="ACCELERATION" 
                      units="MILLIMETER/SECOND^2"/>

            <DataItem category="SAMPLE" id="acc_y" name="AccelerationY" type="ACCELERATION" 
                      units="MILLIMETER/SECOND^2"/>

            <DataItem category="SAMPLE" id="acc_z" name="AccelerationZ" type="ACCELERATION" 
                      units="MILLIMETER/SECOND^2"/>

            <DataItem category="SAMPLE" id="angle_x" name="AngleX" type="ANGLE" 
                      units="DEGREE" nativeUnits="DEGREE" subType="ACTUAL"/>
            
            <DataItem category="SAMPLE" id="angle_y" name="AngleY" type="ANGLE" 
                      units="DEGREE" nativeUnits="DEGREE" subType="ACTUAL"/>
            
            <DataItem category="SAMPLE" id="angle_z" name="AngleZ" type="ANGLE" 
                      units="DEGREE" nativeUnits="DEGREE" subType="ACTUAL"/>
          </DataItems>
        </Sensor>
      </Components>
    </Device>
  </Devices>
</MTConnectDevices>